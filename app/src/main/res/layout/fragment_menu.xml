<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app"
    tools:context=".ui.fragments.menu.MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_round_menu"
            app:layout_constraintBottom_toTopOf="@id/card_view"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_message_theme"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="30dp"
            android:background="@drawable/image_message_theme"
            app:layout_constraintTop_toBottomOf="@id/card_view" />

        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/image_message_theme">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_new_chat"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#B3C9F6"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/floating_button"
                    android:backgroundTint="@color/color_button"
                    android:src="@drawable/icon_new_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="15dp"
                    android:text="Начать новый чат"
                    android:textColor="#FFFAFB"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_photo"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#B3C9F6"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/floating_button"
                    android:backgroundTint="@color/color_button"
                    android:src="@drawable/icon_photo_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="15dp"
                    android:text="Искать через фото"
                    android:textColor="#FFFAFB"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/linear_1">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_speak"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#B3C9F6"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/floating_button"
                    android:backgroundTint="@color/color_button"
                    android:src="@drawable/icon_round_keyboard_voice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="15dp"
                    android:text="Общаться с Pocket AI"
                    android:textColor="#FFFAFB"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_music"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#B3C9F6"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/floating_button"
                    android:backgroundTint="@color/color_button"
                    android:src="@drawable/icon_mingcute_music_3_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="15dp"
                    android:text="Определить музыку"
                    android:textColor="#FFFAFB"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/linear_2">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_theme"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#B3C9F6"
                app:cardCornerRadius="20dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/floating_button"
                    android:backgroundTint="@color/color_button"
                    android:src="@drawable/icon_gridicons_themes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="10dp"
                    android:text="Выбрать тему общения"
                    android:textColor="#FFFAFB"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="20dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>